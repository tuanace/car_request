<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="view_car_request_form" model="ir.ui.view">
        <field name="name">view.car.request.form</field>
        <field name="model">car.request</field>
        <field name="arch" type="xml">
            <form string="Car Request">
                <sheet>
                  <div class="oe_title">
                      <label for="name" class="oe_edit_only"/>
                      <h1>
                          <field name="name" placeholder="Request"/>
                      </h1>
                  </div>
                  <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>

                    </group>
                    <group>

                        <field name="employee_id"/>
                        <field name="car_id"/>
                    </group>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="car_request_tree" model="ir.ui.view">
        <field name="name">car.request.tree</field>
        <field name="model">car.request</field>
        <field name="arch" type="xml">
            <tree string="Car Request">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="car_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <record id="action_car_request_view" model="ir.actions.act_window">
        <field name="name">action.car.request.view</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">car.request</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            <!-- Add Text Here -->
            Car Request
          </p><p>
            <!-- More details about what a user can do with this object will be OK -->
            Click to add a Car Request!
        </p>
        </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="menu_car_request_root" name="Car Request" sequence="10"/>

    <!-- This Menu Item Must have a parent -->
    <menuitem id="menu_car_request_categ" name="Car Request" parent="menu_car_request_root" sequence="10"/>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="menu_car_request" name="Car Request" parent="menu_car_request_categ" action="action_car_request_view" sequence="10"/>

  </data>
</odoo>